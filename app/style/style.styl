@import 'utilities/reset.styl' 

@require "mixins/grid.styl"
.row
    row()
    col('xs') //Extra small devices 
    @media (min-width 768px)
        col('sm') //Small devices Tablets 
    @media (min-width 992px)
        col('md') //Medium devices Desktops 
    @media (min-width 1200px)
        col('lg') //Large devices Desktops 

.container
    width 100%
    max-width 1200px
    min-width 320px
    margin auto
    
.page
    font-family 'MuseoSans'
    font-weight 300
    font-size 14px
    line-height 1.2em
    min-height 2000px
    overflow auto
    
.header
    z-index 50
    position fixed
    top 0px
    left 0px
    right 0px
    width 100%
    height 60px
    background-color rgb(48, 55, 59)
    border-bottom 2px solid #292f32
    &__logo
        background url('../img/logo.png')
        background-repeat no-repeat
        width 141px
        height 60px
        background-position center
        display inline-block
        margin-right 30px
        float left
    &__phone
        font-weight 900
        font-size 16px
        color #fff
        height 60px
        line-height 60px
        display none
        @media (min-width 380px)
            display inline-block
            
    &__right
        display inline-block
        float right
        
.nav
    display inline-block
    float right
    @media (min-width 380px)
        float left
    &__wrapper
        display flex
        flex-direction column
        position fixed
        top 0px
        left 0px
        padding 40px 20px
        background rgba(48, 55, 59, 0.8)
        height 100%
        width 100%
        opacity 0
        visibility hidden
        z-index 100
        transition opacity 200ms 0s, visibility 0s 0s
        transition 200ms 200ms
        &_active
            transition opacity 200ms 0s, visibility 250ms 0s
            opacity 1
            visibility visible
            .nav__item
                opacity 1 !important 
                left 0px !important 
                top 0px !important 

        .nav__item
            position relative
            opacity 0
            left -20px
            top -20px

    &__items
        margin auto
    &__toggle
        display block
        width 30px
        height 60px
        cursor pointer
        padding-top 21px
    &__icon-bar
        width 100%
        height 2px
        background-color #fff
        margin-bottom 6px
    @media (min-width 980px)
        &__wrapper
            display block
            position static
            top 0px
            left 0px
            padding 0px
            background none
            opacity 1
            visibility visible
        &__toggle
        &__close
            display none !important   
        &__item
            display inline-block !important
            line-height 60px !important
            height 60px !important
            margin 0px !important
            margin-right 30px !important
            text-align left !important
            font-size 12px !important
            opacity 1 !important
            left 0px !important
            top 0px !important
    &__close
        display block
        position absolute
        top 15px
        right 15px
        width 30px
        height 30px
        cursor pointer
        &:before
        &:after
            content ''
            position absolute
            top 10px
            width 30px;
            height 2px
            background-color #fff   
        &:before
            transform rotate(45deg)
        &:after
            transform rotate(-45deg)
    &__item
        &:after
            content ''
            display table
            clear both
        display table
        text-align center
        text-transform uppercase
        cursor pointer
        font-size 16px
        margin auto
        margin-bottom 20px
        height 22px
        font-weight 500
        color #fafafa
        transition all 300ms ease
        border-bottom 0px solid rgba(0,0,0,0)
        &:hover
            border-bottom 3px solid #fafafa
        &_active
            border-bottom 3px solid #fafafa
        &_position
            transition = 450ms
            &_1
                transition transition, transition
            &_2
                transition transition+50, transition+50
            &_3
                transition transition+100, transition+100
            &_4
                transition transition+150, transition+150
            &_5
                transition transition+200, transition+200
        
.callme
    @media (min-width 580px)
        display inline-block
    cursor pointer
    font-weight 500
    font-size 14px
    line-height 1em
    color #fff
    border-radius 3px
    padding .5em 10px .5em 42px
    display none
    background #de4544 url(../img/callme__icon.png) 10px center no-repeat
    transition all 0.55s ease
    margin-left 20px
    &:hover
        background-color #b42524  
    
.offer
    display flex
    flex-direction column
    width 100%
    height 100%
    min-height 300px
    background-color #607677 
    background-image url('../img/offer__overlay.png'), 
        linear-gradient(0deg, rgba(0, 0, 0, .7) 10px, rgba(255, 255, 255, .3)), 
        linear-gradient(60deg, rgba(75, 100, 100, .3) 5%, rgba(0, 228, 255, .2)), 
        url('../img/offer__bg.jpg')
    background-repeat repeat, no-repeat, no-repeat, no-repeat
    background-position top left, center center, bottom top, bottom center
    background-size 100px 100px, cover, cover, cover
    background-attachment fixed, scroll, fixed, fixed
    &__wrapper
        margin auto
    &__title
        text-shadow 1px 1px 5px #5b7d80
        font-size 30px
        line-height 40px
        font-weight 700
        color #fff 
        text-align center
        text-transform uppercase
        &_text_before
            padding-top 60px
            padding-bottom 30px
            font-size 22px
            line-height 1em
        
.trigger
    width 100%
    padding 40px 0px 20px 0px
    // margin 0px -15px
    &__title
        font-size 16px
        line-height 18px
        font-weight 800
        color #30373b
        display table
        padding-top 10px
    &__text
        margin-top 10px
        font-size 14px
        line-height 1.3em
        color #111415
        font-weight 300
    &__icon
        margin-right 15px
        ////@media (min-width 1070px)
        float left
    
    &__item
        margin-bottom 20px
        
.causes
    width 100%
    background-color #fff 
    background-image url('../img/offer__overlay.png'), 
        linear-gradient(0deg, rgba(0, 0, 0, .4) 10px, rgba(255, 255, 255, .3)),
        url('../img/causes__bg.jpg')
    background-repeat repeat, no-repeat, no-repeat
    background-position top left, bottom top, bottom center
    background-size 100px 100px, cover, cover
    background-attachment fixed, scroll, fixed
    &__wrapper
         padding 90px 0px
         background-color rgba(255, 255, 255, .4)
    &__title
        text-align center
        text-transform uppercase
        color #c2984f
        font-size 25px
        line-height 1.2em
        font-weight 700
        margin-bottom 60px
    &__namber
        font-size 30px
    
.list
    &__title
        text-align center
        font-weight 900
        font-size 18px
        line-height 1.2em
        color #30373b
        margin-bottom 25px
        margin-top 20px
    &__item
        font-size 16px
        font-weight 500
        color #000
        line-height 1.2em
        margin-bottom 20px