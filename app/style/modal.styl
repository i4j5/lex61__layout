.modal
    *, :after, :before
        box-sizing border-box
        padding 0
        margin 0
        
    position fixed
    left 0
    top 0
    height 100%
    width 100%
    // opacity 0
    visibility hidden
    z-index 190
    &__wrapper
        display flex
        white-space nowrap
        position absolute
        left 0
        top 0
        height 100%
        width 100%
        z-index 1000
    
    &::after
        display inline-block
        vertical-align middle
        width 0
        height 100%
        content ''

    &_visible
        // opacity 1
        visibility visible

    &__dialog
        display inline-block
        vertical-align middle
        z-index 100
        margin auto

    &__close
        cursor pointer

/////////////////////////

.modal_theme_
    &grey
        transition visibility 0ms 300ms
        
        &.modal_visible
            .modal__wrapper
                transition opacity 300ms 0ms, visibility 0ms 0ms
                opacity 1
                visibility visible
            .modal__dialog
                transition transform 300ms 0ms
                transform translateY(0)
        
        & .modal__wrapper
            transition opacity 300ms 0ms, visibility 0ms 300ms
            opacity 0
            visibility hidden
            background-color rgba(48, 55, 59, 0.85) 
        & .modal__close
            width 25px
            height 25px
            position absolute
            right 0px
            top -35px
            display inline-block
            z-index 1050 
        & .modal__dialog
            transition transform 300ms 0ms
            transform translateY(-10px)
            background #fff
            padding 24px
            width 90%
            max-width 400px
            min-width 300px
            position relative
